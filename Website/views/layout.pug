doctype
html(lang="en", ng-app="app")
  head
    title= title
    link(href="css/bootstrap.css", rel="stylesheet", type="text/css" )
    link(href="css/style.css", rel="stylesheet", type="text/css", media="all")
    script(src="js/jquery.min.js", type="text/javascript")
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(ame="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name="description", content="e-store application")
    script(type='application/x-javascript').
      addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    script(src="js/bootstrap-3.1.1.min.js", type="text/javascript")
    script(src="js/angular.js", type="text/javascript")
    script(src="js/angular-route.js", type="text/javascript")
    script(src="js/angular-messages.js", type="text/javascript")
    // cart script(src='js/simpleCart.min.js', type="text/javascript")
    // cart
    link(rel='stylesheet', href='css/flexslider.css', type='text/css', media='screen')
  body
    // header-section-starts
    .header(ng-controller="headerController")
      .header-top-strip
        .container
          .header-top-left
            ul
              li
                a(ng-href="{{getLoginUrl()}}")
                  span.glyphicon.glyphicon-user  
                  | {{getLoginLinkText()}}
              li
                a(href='#/register')
                  span.glyphicon.glyphicon-lock  
                  | Create an Account
          .header-right
            .cart.box_1
              a(href='#/checkout')
                h3
                  span.simpleCart_total  Rs. {{getTotalPrice()}} 
                  |  (
                  span#simpleCart_quantity.simpleCart_quantity  {{getItemsinCart()}} 
                  | )
                  img(src='images/bag.png', alt='')
              p
                a.cart_empty(ng-click="emptyCart()") Empty cart
              .clearfix  
          .clearfix  
    // header-section-ends
    .banner-top(ng-controller="chromeController")
      .container
        nav.navbar.navbar-default(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            .logo
              h1
                a(href='#/main')
                  span E
                  |  -Shop
          // /.navbar-header
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(ng-repeat="m in menuItems")
                a(ng-href="#/catalog/{{m._id}}") {{m.categoryName}}
            .clearfix
          // /.navbar-collapse
        // /.navbar
    block body
    block scripts
    .footer
      .container
        .footer_top
          .span_of_4
            .col-md-3.span1_of_4
              h4 Shop
              ul.f_nav
                li
                  a(href='#/catalog/all') catalogs
            .col-md-3.span1_of_4
              h4 help
              ul.f_nav
                li
                  a(href='#/aboutus') about us
            .col-md-3.span1_of_4
              h4 account
              ul.f_nav
                li
                  a(href='#/login') login
                li
                  a(href='#/register') create an account
                li
                  a(href='#/checkout') my shopping bag
                li
                  a(href='#/account') members area                
            .col-md-3.span1_of_4
              h4 popular
              ul.f_nav
                li
                  a(href='#/newarrivals') new arrivals
            .clearfix
        .cards.text-center
          img(src='images/cards.jpg', alt='')
        .copyright.text-center
          p
            | Â© 2016 Eshop.com All Rights Reserved