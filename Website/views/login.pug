extends layout

block body
    .content
        .container
            .login-page
                .account_grid
                    .col-md-6.login-left.wow.fadeInLeft(data-wow-delay='0.4s')
                        h2 NEW CUSTOMERS
                        p
                            | By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.
                        a.acount-btn(href='/#/register') Create an Account
                    .col-md-6.login-right.wow.fadeInRight(data-wow-delay='0.4s')
                        h3 REGISTERED CUSTOMERS
                        p If you have an account with us, please log in.
                        form(name="login-form", action="/login", method="post")
                            div
                                span
                                    | Email Address
                                    label *
                                input(type='text', name="email")
                            div
                                span
                                    | Password
                                    label *
                                input(type='password', name="passowrd")
                            a.forgot(href='#') Forgot Your Password?
                            input(type='submit', value='Login')
                    .clearfix 

block scripts
    script(src="js/app/main.js", type="text/javascript")